@media all and (max-width: 1024px)
	// ----- HEADER --------------------------------------------------------------
	.header
		& .header-top-menu
			display: none

		&__layout
			&-top
				padding-left: 40px
				padding-right: 40px

			&-bottom
				padding-left: 40px
				padding-right: 40px

		&__burger
			& .header-top-menu
				display: block

	// ----- JACKPOTS & WINNERS section / MAIN page ------------------------------
	.jackpots-winners__section
		&-container
			padding-left: 15px
			padding-right: 15px

		/* coins */
		&:before
			width: 40px
			height: 80px
			top: 35px

		&:after
			width: 50px
			height: 95px
			top: 80px

	// ----- SEO text block / main & games page ----------------------------------
	.seo-text
		&__wrapper
			max-height: 470px
		&-block
			max-width: 630px


	// ----- LOYALTY page --------------------------------------------------------
	.loyalty
		&__list
			padding-left: 50px
			padding-right: 50px

			@supports (display: grid)
				grid-template-columns: repeat(2,1fr)

		&__description
			padding-top: 5px

	// ------ FOOTER -------------------------------------------------------------
	.footer
		&__layout
			padding-left: 50px
			padding-right: 50px

			&--currency
				margin-bottom: 10px

		&__menu
			width: calc(100% / 3 - 25px)
			max-width: inherit
			margin-bottom: 20px

			&:last-child
				width: auto

			&-wrapper
				flex-wrap: wrap
				justify-content: flex-start

		&__currency-icons

			&-list
				width: auto
				margin-left: -30px
				margin-right: -30px

			&-link
				margin-left: 15px
				margin-right: 15px
				margin-bottom: 15px

		&-providers
			padding-bottom: 30px

			&__list-item
				width: calc(100% / 4)

	// ---------------------------------------------------------------------------
	// ---- components page styles -----------------------------------------------
	// ---------------------------------------------------------------------------
	.components
		margin-left: 0
		margin-right: 0

		&__row
			flex-wrap: wrap
			margin: 5px 0

		&__cell--2,
		&__cell--3,
		&__cell--4
			width: 100%
			max-width: 100%
			padding: 10px
			margin: 5px 0
