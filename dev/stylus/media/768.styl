@media all and (max-width: 750px)
	// ----- HEADER --------------------------------------------------------------
	.user-avatar
		margin: 0

		&__links
			display: none

		&__wrapper
			padding-left: 10px
			margin-right: 15px

	// ----- JACKPOTS & WINNERS section / MAIN page ------------------------------
	.jackpots-winners__section
		&-container
			padding-top: 80px
			padding-left: 20px
			padding-right: 20px

		&-inner
			flex-direction: column
			align-items: center
			margin-bottom: 50px

		/* coins & sea horse */
		&-container:before
		&:before,
		&:after
			display: none

	.winners,
	.jackpots
		padding-top: 0

	.winners__wrapper
		order: 2

	.jackpots__wrapper
		order: 1
		margin-bottom: 30px

	/* ----- main page coins -------------------------------------------------- */
	.games__section-coins-holder,
	.games__section-coins-holder + .container
		&:before,
		&:after
			display: none

