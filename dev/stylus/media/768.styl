@media all and (max-width: 768px)

	// ----- HEADER --------------------------------------------------------------
	.header
		&__layout
			&-top
				padding-left: 20px
				padding-right: 20px

			&-bottom
				padding-left: 20px
				padding-right: 20px

	.currency
		display: none

	// ----- BONUSES -------------------------------------------------------------
	.page-profile__content .bonuses__list,
	.shop__list
		grid-template-columns: repeat(2,1fr)

	// ----- ONE BONUS (bonuses info) page ---------------------------------------
	.bonus-info
		max-width: 690px

		&__header
			height: 305px
			padding: 30px

		&__content
			padding-left: 50px
			padding-right: 50px
			margin-top: -5px

		&__title
			font-size: 30px
			line-height: 38px
