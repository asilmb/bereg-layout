// -----------------------------------------------
// Module - Profile primary menu
// -----------------------------------------------

.profile-menu
	display flex
	justify-content: flex-start
	align-items: center
	flex-wrap: wrap
	min-height: 55px
	flex-grow: 1
	background-color: var(--primary-accent)

	// ----- user name -----------------------------------------------------------
	&__user
		font-family: var(--font-secondary)
		font-size: 18px
		line-height: 18px
		color: var(--primary-accent-complimentary)
		white-space: nowrap
		padding: 15px 25px
		margin-right: 5px

	// ----- menu items stuff ----------------------------------------------------
	& .menu-item
		flex-grow: 0
		width: auto

		/* default items */
		& > a
			min-height 55px
			display: flex
			justify-content: flex-start
			align-items: center
			font-size: 18px
			line-height: 20px
			color: var(--secondary-accent-text)
			font-weight: 500
			white-space: nowrap
			background-color: transparent
			padding: 15px 20px
			transition: $t-bg-color
			overflow: hidden
			position relative
			cursor: pointer

			&:hover
				background-color: var(--primary-accent-lighter)

		&.сurrent-menu-item > a
			background-color: var(--primary-accent-lighter)

		// ----- submenu item ------------------------------------------------------
		&-has-children
			padding-right: 25px
			position: relative
			overflow: inherit
			transition: $t-bg-color

			& > a
				padding-right: 10px

			&:hover
				background-color: var(--primary-accent-lighter)

			// ---arrow---
			&:before, &:after
				content: ''
				display block
				box-sizing: border-box
				position: absolute
				right: 4px
				top: 50%
				height: 2px
				width: 10px
				background-color: var(--secondary-accent-text)
				backface-visibility: hidden
				transition: transform .2s ease-out
			&:before
				transform rotate(45deg)
				right: 11px
			&:after
				transform rotate(-45deg)

			&:hover
				&:before
					transform rotate(-45deg)
				&:after
					transform rotate(45deg)

		// ------ submenu menu -----------------------------------------------------
		& .sub-menu
			min-width: 140px
			max-height: 0
			visibility: hidden
			background-color: var(--secondary-accent)
			padding: 10px 0
			position: absolute
			top: 100%
			right: 0
			overflow: hidden
			transition: max-height .4s ease-out
			z-index: 1

			/* header menu item in submenu */
			& .menu-item
				margin-right: 0
				max-width: none

				&:not(:last-child)
					margin-bottom: 10px

			& .menu-item a
				min-height: 30px
				font-family: var(--font-primary)
				color: var(--primary-accent-lighter)
				font-size: 18px
				line-height: 21px
				font-weight: 400
				text-transform: none
				text-align: left
				padding: 5px 15px
				transition: $t-color, $t-bg-color

				&:before
					display: none

			& .menu-item:hover > a,
			& .menu-item.сurrent-menu-item > a
				color var(--secondary-accent)
				background-color: var(--primary-accent)

		&:hover .sub-menu
			max-height: 500px
			visibility: visible

// -----------------------------------------------------------------------------
@media all and (max-width: 1220px)
	.profile-menu__user
		padding-right: 0
