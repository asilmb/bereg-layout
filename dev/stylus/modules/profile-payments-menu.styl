// -----------------------------------------------------------------------------
// Module - Profile payments menu
// -----------------------------------------------------------------------------
.profile-payments-menu
	width: 100%
	max-width: 1920px
	min-height: 75px
	display flex
	justify-content: center
	align-items: center
	background-color: var(--secondary-accent)
	margin: 0 auto 20px

	// ----- menu items stuff ----------------------------------------------------
	& .menu-item
		flex-grow: 0
		width: auto
		margin: 0 10px

		/* default items */
		& > a
			display: flex
			justify-content: flex-start
			align-items: center
			font-size: 24px
			line-height: 1.5
			color: var(--primary-accent-lighter)
			font-weight: 400
			white-space: nowrap
			background-color: transparent
			padding: 20px
			transition: $t-color
			overflow: hidden
			position relative
			cursor: pointer

			&:after
				content: ""
				height: 4px
				width: 0
				background-color: var(--primary-accent-lighter)
				box-shadow: 0px 0px 14px var(--primary-accent-lighter)
				position: absolute
				left: 20px
				bottom: 15px
				transition: width .2s ease-out

			&:hover
				color: var(--primary-accent-complimentary)

			&:hover:after
				width: calc(100% - 40px)

		&.сurrent-menu-item > a
			color: var(--primary-accent-complimentary)

			&:after
				width: calc(100% - 40px)

// -----------------------------------------------------------------------------
@media all and (max-width: 710px)
	.profile-payments-menu .menu-item
		margin: 0

		& > a
			font-size: 18px


// -----------------------------------------------------------------------------
@media all and (max-width: 580px)
	.profile-payments-menu
		flex-direction: column

		& .menu-item > a
			padding-top: 15px
			padding-bottom: 15px
