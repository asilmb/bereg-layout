.header-menu
	display: flex
	align-items: center
	justify-content: flex-start
	flex-wrap: nowrap

	& .menu-item
		max-width: 140px
		text-align center
		text-overflow: ellipsis
		overflow: hidden

		&:not(:last-of-type)
			margin-right: 30px

		& > a
			display: block
			font-family: var(--font-secondary)
			color: var(--primary-accent-complimentary)
			font-size 16px
			line-height: 1.5
			text-transform: uppercase
			white-space: nowrap
			padding: 10px 0 10px 25px
			overflow hidden
			text-overflow ellipsis
			position: relative
			cursor: pointer
			transition: $t-color

			&:before
				content: ""
				flex-shrink: 0
				height: 20px
				width: 20px
				background-position: center
				background-size: contain
				background-repeat: no-repeat
				position: absolute
				left: 0
				top: 50%
				margin-top: -10px

		&:nth-child(1n) > a:before
			background-image: url("../img/elements/header-nav-menu-1.svg")
		&:nth-child(2n) > a:before
			background-image: url("../img/elements/header-nav-menu-2.svg")
		&:nth-child(3n) > a:before
			background-image: url("../img/elements/header-nav-menu-3.svg")

		// ----- hover & active ----------------------------------------------------
		&:hover > a,
		&.сurrent-menu-item > a
			color var(--primary-accent)

		// ----- submenu item ------------------------------------------------------
		&-has-children
			max-width: 175px
			padding-right: 35px
			position: relative
			overflow: inherit

			// ---arrow---
			&:before, &:after
				content: ''
				display block
				box-sizing: border-box
				position: absolute
				right: 0
				top: 50%
				height: 2px
				width: 10px
				background-color: var(--primary-accent)
				backface-visibility: hidden
				transition: transform .2s ease-out
			&:before
				transform rotate(45deg)
				right 7px
			&:after
				transform rotate(-45deg)

			&:hover
				&:before
					transform rotate(-45deg)
				&:after
					transform rotate(45deg)


		// ------ submenu menu -----------------------------------------------------
		& .sub-menu
			min-width: 140px
			max-height: 0
			visibility: hidden
			background-color: var(--secondary-accent)
			padding: 10px 0
			position: absolute
			top: calc(100% - 5px)
			right: 0
			overflow: hidden
			transition: max-height .4s ease-out
			z-index: 1

			/* header menu item in submenu */
			& .menu-item
				margin-right: 0
				max-width: none

				&:not(:last-child)
					margin-bottom: 10px

			& .menu-item a
				font-family: var(--font-primary)
				color: var(--primary-accent-lighter)
				font-size: 18px
				line-height: 21px
				text-transform: none
				text-align: left
				padding: 5px 15px
				transition: $t-color, $t-bg-color

				&:before
					display: none

			& .menu-item:hover > a,
			& .menu-item.сurrent-menu-item > a
				color var(--secondary-accent)
				background-color: var(--primary-accent)

		&:hover .sub-menu
			max-height: 500px
			visibility: visible
