.blocked
  display: flex
  flex-direction: column
  align-items: center
  justify-content: flex-start
  text-align: center

  &__title
    font-size: 36px
    line-height: 1.5
    text-transform: uppercase
    color: $text-color-dark-gray
    font-weight: 700
    margin-bottom: 20px

  &__image
    width: 405px
    height: 450px
    margin-bottom: 40px

    & img
      width: 100%
      height: 100%
      object-fit: contain
      object-position: center

  &__description
    font-size: 16px
    line-height: 1.5
    color: $text-color-dark-gray
    margin-bottom: 30px

  &__button
    margin-bottom: 10px
