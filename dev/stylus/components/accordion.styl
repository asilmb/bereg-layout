.accordion
	&__item
		background-color: var(--color-surface)
		user-select none
		margin-bottom: 40px
		position: relative

		&:after
			content: ""
			height: 2px
			background-image: linear-gradient(270deg, rgba(0,0,0,0) 0%, var(--primary-accent) 50%, rgba(0,0,0,0) 100%)
			position: absolute
			left: 0
			right: 0
			bottom: -20px

		&:last-child
			margin-bottom: 0

			&:after
				display: none

		&-header
			min-height: 53px
			display: flex
			justify-content: space-between
			align-items: center
			font-family: var(--font-secondary)
			font-weight: 400
			font-size: 24px
			line-height: 26px
			background-color: var(--color-surface)
			padding: 0 40px 0 0
			position relative
			transition: $t-color
			cursor: pointer

			& span
				display: flex
				justify-content: flex-start
				align-items: center
				margin-right: 5px
				position: relative

				&:before
					content: ""
					width: 53px
					height: 53px
					background-image: url("../img/backgrounds/games-section-title.png")
					background-size: contain
					background-repeat: no-repeat
					margin-right: 10px

			&:before,
			&:after
				content: ''
				display: block
				box-sizing: border-box
				position: absolute
				right: 0
				top: 50%
				height: 2px
				width: 10px
				background-color: var(--primary-accent)
				backface-visibility: hidden
				transition-property: transform
				transition-duration: .2s
			&:before
				transform: rotate(45deg)
				right: 7px
			&:after
				transform: rotate(-45deg)

			&:hover
				color: var(--primary-accent)

		&-content
			display: none
			visibility hidden
			opacity 0
			padding: 35px 0 0 0
			animation-name: open
			animation-duration: 2s
			animation-iteration-count: 1
			animation-direction: normal
			animation-timing-function: ease-out
			animation-fill-mode: forwards
			animation-delay: 0s


		// ----- opened stuff ------
		&--open &-header
			&:before
				transform: rotate(-45deg)
			&:after
				transform: rotate(45deg)

		&--open &-content
			display: flex
			visibility visible
			opacity 1
			justify-content center


// -----------------------------------------------------------------------------
@media (max-width: 1024px) and (min-width: 710px)
	.accordion__item:after
		display: none

// -----------------------------------------------------------------------------
@media all and (max-width: 580px)
	.accordion__item-header span
		font-size: 18px
		line-height: 18px

		&:before
			width: 36px
			height: 36px

	.accordion__item-content
		padding-top: 30px
