.slider-choose-bonus
	position relative
	max-width 320px
	width 100%

	& .bonuses__item
		padding 10px
		&__img
			padding-top: 50%
			margin: auto
			width: 150px
			height: 150px
		& .form__input
			margin-bottom 0
			margin-top: 10px

	& .bonuses__item__params li span
		font-size 16px
	& .slider-arrow--prev, .slider-arrow--next
		color $primary-yellow

	& .swiper-pagination
		height: 70px
		position: relative
		display: flex
		justify-content: center
		align-items: center
		width 100%
		& .swiper-pagination-bullet
			width: 12px
			height: 12px
			background: #ffffff
			margin: 0 6px
		& .swiper-pagination-bullet-active
			background: $primary-yellow

