// -----------------------------------------------
// Styles - for FAQ page
// -----------------------------------------------
.faq

	/* ------ inner stuff ----------------------------------------------------- */
	&__list
		width: 100%

	&__item
		font-size: 16px
		line-height: 19px
		color: var(--secondary-accent-text)
		background-color: var(--primary-accent)
		border-radius: 10px
		padding: 20px
		margin-bottom: 20px

	&__question
		font-weight bold
		padding-right: 25px
		margin: 0
		position: relative
		cursor pointer

		& p:last-child
			margin-bottom: 0

		&:before,
		&:after
			content ''
			position absolute
			background-color: var(--secondary-accent-text)
			top: 50%

		&:before
			width: 21px
			height: 3px
			margin-top: -2px
			right: 2px

		&:after
			width: 3px
			height: 21px
			margin-top: -11px
			right: 11px
			transition: $t-transform

	&__answer
		display none
		margin-top: 20px

		& p:last-child
			margin-bottom: 0

	/* open state */
	&--open	&__question:after
		transform rotate(90deg)
		opacity: 0
