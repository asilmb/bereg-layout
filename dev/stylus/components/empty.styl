/***
*
* Стили для пустой страницы
*
***/
.empty,
.empty-data
	display: flex
	flex-direction: column
	justify-content: center
	align-items: center
	padding: 60px 0

	&__img
		width: 475px
		height: 375px
		object-fit: contain
		object-position: center
		margin-bottom: 20px

	&__text
		text-align: center
		font-size: 16px
		line-height: 1.5
		color: var(--primary-accent-complimentary)
		padding-left: 20px
		padding-right: 20px
		margin-bottom: 75px
