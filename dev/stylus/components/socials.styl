// -----------------------------------------------
// Component - Socials
// -----------------------------------------------
.socials
	text-align center

	&__list
		display: flex
		align-items: center
		justify-content center
		flex-wrap wrap
		margin-bottom 15px

		&--footer
			justify-content: flex-start
			margin-top: -5px
			margin-left: -5px

	&__item
		&-link
			display: flex
			justify-content: center
			align-items: center
			text-decoration: none
			padding: 5px 10px
			cursor: pointer

			& i
				color var(--primary-accent-complimentary)
				width 38px
				height 38px
				font-size 25px
				text-shadow: none

			&:hover i
				color: var(--primary-accent)

	/* --- login + reg + profile / gold circles ------------------------------- */
	&__list--auth
		width: auto
		margin-left: -15px
		margin-right: -15px

	&__list--auth &__item-link
		width: 38px
		height: 38px
		border-radius: 50%
		border: 2px solid var(--primary-accent)
		background-color: var(--primary-accent)
		padding: 0
		margin: 0 15px 5px
		transition: $t-bg-color

		& i
			font-size: 20px

		&.active,
		&:hover
			background-color: var(--color-surface)
		&:hover i
			color: var(--primary-accent-complimentary)
