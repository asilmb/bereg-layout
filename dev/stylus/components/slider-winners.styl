.slider-winners
	width: 100%
	max-width: 1470px
	padding-top: 35px
	padding-left: 120px
	padding-right: 120px
	margin: 0 auto

	/* ------------------------------------------------------------------------ */
	&__section
		padding-top: 15px
		position: relative

		/* gold line on bottom */
		& .container
			position: relative

			&:after
				content: ""
				height: 2px
				background-image: linear-gradient(90deg, rgba(0,0,0,0) 0%, rgba(222,175,118,0.5) 25%, #DCA96B 50%, rgba(222,175,118,0.5) 75%, rgba(0,0,0,0) 100%);
				position: absolute
				left: 0
				right: 0
				pointer-events: none
				z-index: 1

		/* cards on side */
		&:before,
		&:after
			content: ""
			background-size: contain
			background-repeat: no-repeat
			position: absolute
			top: 0
			pointer-events: none

		&:before
			width: 180px
			height: 260px
			background-image: url("../img/jackpots-winners/winners-cards--left.jpg")
			background-position: left center
			left: 0
			top: 160px

		&:after
			width: 180px
			height: 380px
			background-image: url("../img/jackpots-winners/winners-cards--right.jpg")
			background-position: right center
			right: 0
			top: 15px

		&-heading
			width: 100%
			min-height: 60px
			display: flex
			justify-content: flex-start
			align-items: center
			font-family: var(--font-secondary)
			font-size: 24px
			line-height: 24px
			text-align: left
			font-weight: 400
			text-transform: none
			margin-bottom: 0

			&:before
				content: ""
				width: 57px
				height: 57px
				background-image: url("../img/backgrounds/games-section-title.png")
				background-size: contain
				background-repeat: no-repeat

		&-button
			text-align: center
			padding-top: 40px
			padding-bottom: 40px

	/* ------------------------------------------------------------------------ */
	&__slide
		border-radius: 6px
		overflow: hidden

		&-img
			height 100%
			padding-top 67.5%
			position relative
			overflow hidden

			& img
				width 100%
				height 100%
				position: absolute
				top 0
				left 0
				object-fit cover

				&.no-photo
					object-fit scale-down

		&-footer
			height: 60px
			display: flex
			justify-content: space-between
			align-items: center
			background-color: var(--primary-accent)
			padding: 10px
			position: absolute
			bottom: 0
			left: 0
			right: 0

		&-nickname
			font-family: var(--font-secondary)
			color: var(--secondary-accent-darker)
			font-size: 18px
			line-height: 22px
			text-align: left
			white-space: nowrap
			text-overflow: ellipsis
			overflow: hidden

		&-amount
			flex-shrink: 0
			font-family: var(--font-secondary)
			color: var(--primary-accent-complimentary)
			font-size: 18px
			line-height: 26px
			text-align: right
			white-space: nowrap
			background-color: var(--secondary-accent-darker)
			border-radius: 4px
			padding: 5px 8px
			margin-left: 5px
			text-overflow: ellipsis
			overflow: hidden

// -----------------------------------------------------------------------------
@media all and (max-width: 1220px)
	.slider-winners
		padding-left: 95px
		padding-right: 95px

		&__section
			padding-left: 25px
			padding-right: 25px

			&:before
				left: -40px
				top: 130px
			&:after
				right: -20px



// -----------------------------------------------------------------------------
@media all and (max-width: 1024px)
	.slider-winners__section
		&:before,
		&:after
			display: none



// -----------------------------------------------------------------------------
@media all and (max-width: 768px)
	.slider-winners
		padding-left: 35px
		padding-right: 35px

		&__section-heading
			&:before
				width: 52px
				height: 52px




// -----------------------------------------------------------------------------
@media all and (max-width: 580px)
	.slider-winners
		padding-top: 5px
		padding-left: 0
		padding-right: 0

		&__section
			padding-left: 10px
			padding-right: 10px

		&__section-heading
			font-size: 18px
			line-height: 20px
			padding-left: 0
			padding-right: 0

			&:before
				width: 36px
				height: 36px

		&__section-button
			padding-top: 30px
