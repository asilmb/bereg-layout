/***
*
* Каптча
*
***/
.captcha
	display: flex
	align-items: center
	justify-content: flex-start

	&__img
		height: 40px
		margin-left: 5px
		margin-right: 5px
		display flex
		flex-shrink 0

		& img
			width: 60px
			height: 100%
			object-fit: contain
			object-position: center

	&__reload
		width: 30px
		height: 40px
		flex-shrink: 0
		text-align: right
		color $color-medium-grey
		font-size: 24px
		line-height 0
		transition: $t-color
		cursor: pointer

		&:hover
			color: var(--primary-accent)

/* with label */
.form__input-label + .captcha
	& input[type='text'],
	& input[type='password'],
	& input[type='email'],
	& input[type='tel'],
	& textarea
		width: 100px
		border: 0
		border-bottom: 2px solid var(--primary-accent)
		padding-left: 0
		padding-right: 0
		margin-right: 15px

/***
*
* Google captcha stuff
*
***/
.captcha__wrapper
	width: 280px
	height: 80px
	padding-top: 10px
	margin: 0 0 40px

	& img
		width: 100%
		height: 100%
		object-fit: contain
		border-radius: 4px
		overflow: hidden
