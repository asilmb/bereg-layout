.games-recent
	&__wrapper
		position relative
		display flex
		justify-content space-between
		align-items center
	&__item
		width: 100%
		background: #3a3a3a
		position: relative
		overflow: hidden
		padding 20px
		flex-shrink: 0
		&__name
			font-size 18px
			margin-bottom 10px
		&__img
			border-radius 3px
			overflow hidden
			transition: all .2s ease-out
			&:hover
				filter brightness(1.5)
