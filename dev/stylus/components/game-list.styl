// -----------------------------------------------------------------------------
// Component - Game list
// -----------------------------------------------------------------------------
.games
	/* ----- pagination ------------------------------------------------------- */
	&__pagination .pager
		padding-top: 100px
		padding-bottom: 100px

	/* ----- page games / list ------------------------------------------------ */
	&__list
		display flex
		flex-wrap wrap
		justify-content center
		padding-top: 10px

		@supports (display: grid)
			display: grid
			grid-template-columns: repeat(4, 1fr)
			grid-gap: 30px
			margin: auto

	/* ----- one game item ---------------------------------------------------- */
	&__item
		flex-shrink 0
		width 100%
		max-width 287px
		box-sizing: border-box
		background-color: var(--color-surface)
		border-radius: 10px
		margin 15px
		position: relative
		overflow: hidden

		@supports (display: grid)
			max-width unset
			margin unset

		&-name
			display: none
			color: var(--primary-accent-complimentary)
			font-weight: 700
			font-size: 14px
			line-height: 18px
			text-align center
			background-color: rgba(0,0,0,.5)
			padding: 8px
			position absolute
			top: 0
			left: 0
			right: 0

		&-img
			height 100%
			padding-top 67.5%
			position relative
			overflow hidden

			& img
				width 100%
				height 100%
				position: absolute
				top 0
				left 0
				object-fit cover

				&.no-photo
					object-fit scale-down

		&:hover
			box-shadow: var(--primary-shadow)

		&-overlay
			display: flex
			justify-content space-around
			align-items: flex-end
			background-color: var(--color-surface-75)
			position: absolute
			top: 0
			right: 0
			bottom: 0
			left: 0
			opacity: 0
			visibility: hidden
			transition: all .2s ease-out 0s

			& .button
				margin: 5px 5px 0 5px

		&:hover .games__item-overlay
			visibility: visible
			opacity: 1
			padding 5%
			transition: all .2s ease-out 0s

		&-favorite
			flex-shrink: 0
			width: 60px
			height: 60px
			background-image: url("../img/backgrounds/favorite-default.png")
			background-position: center
			background-size: contain
			background-repeat: no-repeat
			margin-left: -5px
			margin-right: -5px
			margin-bottom: -5px
			transition: $t-filter
			cursor: pointer

			&:hover,
			&.active
				// background-image: url("../img/backgrounds/favorite-active.svg")
				filter: drop-shadow(0 0 10px var(--primary-accent))



// -----------------------------------------------------------------------------
@media all and (max-width: 1220px)
	.games__list
		@supports (display: grid)
			grid-template-columns: repeat(3,1fr)
			grid-gap: 20px



// ----------------------------- ------------------------------------------------
@media all and (max-width: 768px)
	.games__list
		@supports (display: grid)
			grid-template-columns: repeat(2,1fr)

	.games__item
		&-favorite
			width: 55px
			height: 55px
			margin-left: -2px
			margin-right: -2px
			margin-bottom: -5px

// -----------------------------------------------------------------------------
@media all and (max-width: 580px)
	.games__list
		@supports (display: grid)
			grid-gap: 10px

	.games__item
		&:hover,
		&.active
			box-shadow: none

		&-overlay
			top: auto
			height: 30px
			align-items: center
			justify-content: space-between
			padding: 5px 10px

			& .button
				margin: 0 2px

		&-favorite
			width: 22px
			height: 22px
			margin-bottom: 0
