.provider-menu
	width 250px
	flex-shrink 0

	& .selectric
		background-color: transparent
		border: 4px solid var(--primary-accent)
		border-radius: 16px
		transition: $t-border-color

		& .label
			color: var(--primary-accent-complimentary)
			font-weight: 500
			font-size: 18px
			line-height: 25px
			letter-spacing: .05em
			padding-top: 25px
			padding-left: 20px
			padding-bottom: 25px
			padding-right: 30px

		& .button
			right: 0
			width: 55px
			height: 75px

			&:before,
			&:after
				box-shadow: 0 0 0 1px var(--primary-accent-complimentary)
				background-color: var(--primary-accent-complimentary)
			&:before
				right: 27px
			&:after
				right: 20px

	& .selectric-items
		min-width: 100%
		border-radius: 0
		border: 0
		left: 0
		top: calc(100% - 4px)
		bottom: auto

	& .selectric-items ul
		padding: 0

	// ----- providers: item with icon -----
	& .selectric-items ul li
		min-height: 50px
		color: var(--primary-accent-complimentary)

		&:first-child
			display: none

		& .provider-icon
			flex-shrink: 0
			width: 30px
			height: 30px
			background-position: center
			background-size: contain
			background-repeat: no-repeat
			margin-right: 5px
			margin-top: -5px

/* opened */
.provider-menu .selectric-wrapper.selectric-open
	z-index: 8

	& .selectric
		border-color: var(--primary-accent-lighter)
		border-radius: 16px

	&  .selectric-items
		border: 4px solid var(--primary-accent-lighter)
		border-radius: 16px
		background-color: #25000A

		&	li
			color: var(--primary-accent-complimentary)
			font-weight: 500
			font-size: 18px
			line-height: 20px
			letter-spacing: .05em
			padding: 5px 20px

			&:hover,
			&.selected,
			&.highlighted
				background-color: var(--primary-accent)
				color: var(--secondary-accent-darker)


// -----------------------------------------------------------------------------
@media all and (max-width: 580px)
	.provider-menu
		width 160px

		& .selectric
			& .label
				font-weight: 400
				font-size: 12px
				line-height: 15px
				padding-top: 15px
				padding-left: 10px
				padding-bottom: 15px
				padding-right: 30px

			& .button
				width: 35px
				height: 45px

				&:before,
				&:after
					width: 6px
				&:before
					right: 16px
				&:after
					right: 12px

		& .selectric-items ul li
			min-height: 30px

			& .provider-icon
				width: 20px
				height: 20px

	/* opened */
	.provider-menu .selectric-wrapper.selectric-open .selectric-items
			&	li
				font-weight: 400
				font-size: 12px
				line-height: 15px
				padding: 5px 10px
