/***
*
* Главный лоадер при загрузке страницы
*
***/

.loader
	background-color #222
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	z-index 999

	&:before
		content ''
		width 50px
		height 50px
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		margin auto
		border 4px solid var(--primary-accent)
		border-bottom-color #222
		border-radius 50%
		animation spin .75s infinite linear
