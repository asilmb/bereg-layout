.error-400
  display: flex
  flex-direction: column
  align-items: center
  justify-content: flex-start
  text-align: center

  &__title
    font-size: 36px
    line-height: 1.5
    text-transform: uppercase
    color: $text-color-dark-gray
    font-weight: 700
    margin-bottom: 10px

  &__image
    width: 385px
    height: 455px
    margin-bottom: 30px

    & img
      width: 100%
      height: 100%
      object-fit: contain
      object-position: center

  &__description
    font-size: 16px
    line-height: 1.5
    color: $text-color-dark-gray
    margin-bottom: 40px

  &__button
    margin-bottom: 10px
