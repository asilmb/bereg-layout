// -----------------------------------------------
// Component - Game list
// -----------------------------------------------
.games-types__menu
	width: fit-content
	margin: auto

	/* --- outer stuff -------------------------------------------------------- */
	&-outer
		width: 100%
		position: relative

		/* coins on side */
		&:before,
		&:after
			content: ""
			background-size: contain
			background-repeat: no-repeat
			position: absolute
			pointer-events: none
			z-index: 3

		&:before
			width: 190px
			height: 190px
			background-image: url("../img/games-types/games-types-coin--left.png")
			background-position: left center
			top: 15px
			left: 0

		&:after
			width: 180px
			height: 230px
			background-image: url("../img/games-types/games-types-coin--right.png")
			background-position: right center
			top: 0
			right: 0

		/* gold line on bottom */
		& .container
			position: relative

			&:after
				content: ""
				height: 2px
				background-image: linear-gradient(90deg, rgba(0,0,0,0) 0%, rgba(222,175,118,0.5) 25%, #DCA96B 50%, rgba(222,175,118,0.5) 75%, rgba(0,0,0,0) 100%);
				position: absolute
				left: 0
				right: 0
				pointer-events: none

	/* --- inner stuff -------------------------------------------------------- */
	&-wrapper
		display flex
		justify-content: center
		align-items center
		height 205px
		width: 100%
		max-width: 1200px
		padding-top: 40px
		padding-left: 75px
		padding-right: 75px
		margin: auto
		position: relative

		/* shadow on sides */
		&:before,
		&:after
			content: ""
			width: 195px
			position: absolute
			top: 0
			bottom: 0
			z-index: 2
			pointer-events: none
		&:before
			left: 0
			background-image: linear-gradient(to right, var(--color-surface) 50%, rgba(0,0,0,0) 100%);
		&:after
			right: 0
			background-image: linear-gradient(to left, var(--color-surface) 50%, rgba(0,0,0,0) 100%);

		& .swiper-container
			height 100%
			width 100%

		& .slider-arrow--prev,
		& .slider-arrow--next
			display: flex
			justify-content: center
			align-items: center
			width: 90px
			color: var(--primary-accent)
			position absolute
			top: 0
			bottom: 0
			transform: none
			cursor: pointer
			z-index: 3

			& i
				font-size: 20px
				transition: $t-text-shadow

			&:hover i
				text-shadow: var(--primary-shadow)

			&.swiper-button-disabled
				display: none

		& .slider-arrow--prev
			left: 0

		& .slider-arrow--next
			right: 0

	&-item
		flex-shrink 0
		height: 100%
		width: auto
		max-width: 120px

		&-link
			height: 100%
			width: 100%
			display flex
			flex-direction: column
			justify-content: flex-start
			align-items center
			text-align: center
			font-family: var(--font-secondary)
			font-size: 16px
			line-height: 20px
			color: var(--primary-accent-complimentary)
			cursor: pointer
			overflow: hidden
			transition: $t-color

			/* icons */
			& img
				width: 110px
				height: 110px
				object-fit: contain
				object-position: center

			/* text */
			& span
				max-width: 100%
				white-space nowrap
				text-overflow: ellipsis
				overflow: hidden

		@media (hover: hover)
			&:hover &-link
				color: var(--primary-accent)


// -----------------------------------------------------------------------------
@media (max-width: 1350px)
	.games-types__menu
		/* coins */
		&-outer:before
			width: 85px
			height: 120px
			top: 85px

		&-outer:after
			width: 115px
			height: 150px
			top: 75px
			right: -25px

		/* shadow */
		&-wrapper:before,
		&-wrapper:after
			width: 160px

		/* arrows */
		&-wrapper .slider-arrow--prev
			padding-right: 50px

		&-wrapper .slider-arrow--next
			padding-left: 50px

// -----------------------------------------------------------------------------
@media (max-width: 1024px)
	.games-types__menu
		/* coins */
		&-outer:before,
		&-outer:after
			display: none

		/* arrows */
		&-wrapper .slider-arrow--prev
			padding-right: 10px

		&-wrapper .slider-arrow--next
			padding-left: 10px

		/* shadow */
		&-wrapper:before,
		&-wrapper:after
			width: 115px

		&-wrapper
			height 175px
			padding-top: 10px
			padding-left: 50px
			padding-right: 50px

// -----------------------------------------------------------------------------
@media (max-width: 580px)
	.games-types__menu
		/* arrows */
		&-wrapper .slider-arrow--prev,
		&-wrapper .slider-arrow--next
			width: 35px
			padding-bottom: 20px

		&-wrapper .slider-arrow--prev
			padding-right: 10px
			left: -10px

		&-wrapper .slider-arrow--next
			padding-left: 10px
			right: -10px

		/* shadow */
		&-wrapper:before,
		&-wrapper:after
			width: 20px

		&-wrapper
			height 140px
			padding-top: 5px
			padding-left: 10px
			padding-right: 10px
