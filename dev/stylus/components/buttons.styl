 // -----------------------------------------------
// Component - Button
// -----------------------------------------------
.button
	display inline-flex
	justify-content: center
	align-items: center
	width 100%
	max-width: 100%
	height 50px
	font-family: var(--font-primary)
	font-size 18px
	line-height: 26px
	text-align: center
	font-weight 500
	text-decoration none
	user-select: none
	vertical-align: middle
	text-transform: uppercase
	padding: 10px 15px
	border-radius: 12px
	white-space: nowrap
	overflow: hidden
	box-sizing: border-box
	text-overflow: ellipsis
	transition: $t-color, $t-bg-color
	cursor pointer

	& i
		flex-shrink: 0
		font-size 20px
		line-height: 20px
		margin-right 10px
		text-shadow: none

	& span
		text-overflow: ellipsis
		overflow: hidden

	/* buttons width */
	&--w280
		width: 280px

	&--w240
		width: 240px

	&--w210
		width: 210px

	&--w175
		width: 175px

	&--w140
		width: 140px

	&--w130
		width: 130px

	/* buttons height */
	&--h30
		height: 30px
		line-height: 20px
		border-radius: 8px
		padding: 5px 10px

	&--h35
		height: 35px
		line-height: 25px
		padding: 5px 10px

	/* buttons templates */
	&--filled
		color var(--secondary-accent-text)
		border: 2px solid var(--primary-accent)
		background-color: var(--primary-accent)

		&:hover
			background-color: var(--primary-accent-lighter)

	&--light-filled
		height: 44px
		line-height: 20px
		color var(--secondary-accent-darker)
		border: 2px solid var(--primary-accent-lighter)
		background-color: var(--primary-accent-lighter)
		text-transform: none
		border-radius: 10px

		&:hover
			color: var(--primary-accent-lighter)
			background-color: transparent

	&--filled-secondary
		color var(--primary-accent-complimentary)
		border: 3px solid var(--secondary-accent-lighter)
		background-color: var(--secondary-accent-lighter)

		&:hover
			background-color: transparent

	&--bordered
		color: var(--primary-accent-complimentary)
		background-color transparent
		border 3px solid var(--primary-accent)

		&:hover
			color var(--secondary-accent-text)
			background-color: var(--primary-accent)

	&--light-bordered
		height: 44px
		line-height: 20px
		color: var(--primary-accent-lighter)
		background-color: transparent
		border: 2px solid var(--primary-accent-lighter)
		text-transform: none
		border-radius: 10px

		&:hover
			color var(--secondary-accent-darker)
			background-color: var(--primary-accent-lighter)

	&--bordered-filled
		color: var(--secondary-accent-text)
		background-color: var(--primary-accent-lighter)
		border 2px solid var(--primary-dark-accent)

		&:hover
			background-color: var(--primary-dark-accent)

		&.button--small
			height: 44px
			line-height: 20px
			text-transform: none
			border-radius: 10px

	/* ----- buttons disabled stuff ------------------------------------------- */
	&:disabled,
	&:disabled:hover,
	&--disabled,
	&--disabled:hover
		opacity: .5
		cursor default

	&--filled:disabled,
	&--filled:disabled:hover,
	&--filled&--disabled,
	&--filled&--disabled:hover
		background-color: var(--primary-accent)

	&--bordered:disabled,
	&--bordered:disabled:hover,
	&--bordered&--disabled,
	&--bordered&--disabled:hover
		color: var(--primary-accent-complimentary)
		background-color transparent

	&--filled-secondary:disabled,
	&--filled-secondary:disabled:hover,
	&--filled-secondary&--disabled,
	&--filled-secondary&--disabled:hover
		color var(--primary-accent-complimentary)
		border: 3px solid var(--secondary-accent-lighter)
		background-color: var(--secondary-accent-lighter)

	// ----- special buttons -----------------------------------------------------
	/* header (unlogged): registration button */
	&--registration
		width: auto
		height: 34px
		font-family: var(--font-secondary)
		color: var(--primary-accent-complimentary)
		font-size: 12px
		line-height: 26px
		text-transform: uppercase
		font-weight: 400
		background-color: transparent
		border: 4px solid var(--primary-accent)
		border-radius: 8px
		padding: 0 10px
		transition: $t-color, $t-bg-color

		&:hover
			color: var(--secondary-accent)
			background-color: var(--primary-accent-lighter)

	/* header (unlogged): login button */
	&--login
		display: flex
		align-items: center
		height: 34px
		width: auto
		flex-shrink: 0
		font-family: var(--font-secondary)
		color: var(--primary-accent-complimentary)
		font-size: 20px
		line-height: 30px
		text-transform: lowercase
		font-weight: 400
		padding: 0 5px
		margin-right: 15px
		position: relative
		transition: $t-color

		&:before
			content: ""
			flex-shrink: 0
			width: 30px
			height: 30px
			background-image: url("../img/elements/login-button.svg")
			background-position: center
			background-size: 20px 20px
			background-repeat: no-repeat
			background-color: var(--primary-accent-complimentary)
			border: 2px solid var(--primary-accent)
			border-radius: 50%
			margin-right: 7px
			transition: $t-bg-color

		&:hover
			color: var(--primary-accent)

			&:before
				background-color: var(--primary-accent-lighter)

	/* header (unlogged): transactions button */
	&--transactions
		width: 63px
		height: 34px
		display: flex
		justify-content: center
		align-items: center
		color: var(--primary-accent-complimentary)
		font-size: 24px
		line-height: 28px
		font-weight: normal
		text-transform: uppercase
		background-color: transparent
		border: 4px solid var(--primary-accent)
		border-radius: 8px
		padding: 0 8px
		transition: $t-color, $t-bg-color

		&:before
			content: ""
			flex-shrink: 0
			width: 23px
			height: 23px
			background-image: url("../img/elements/header-transactions.png")
			background-position: center
			background-size: contain
			background-repeat: no-repeat
			margin-right: 3px

		&:hover
			color: var(--secondary-accent)
			background-color: var(--primary-accent-lighter)

	/* main page: button on main slider */
	&--big
		display: inline-flex
		width: auto
		height: 90px
		min-width: 350px
		font-size: 48px
		line-height: 50px
		font-weight: 400
		border-radius: 18px
		padding: 20px 50px


// -----------------------------------------------------------------------------
@media all and (max-width: 1220px)
	/* main page: button on main slider */
	.button--big
		height: 57px
		min-width: 218px
		font-size: 28px
		line-height: 27px
		border-radius: 12px
		padding: 15px 20px

	/* game overlay buttons: play & demo */
	.button--h30
		height: 25px
		line-height: 25px
		border-radius: 6px
		padding: 0 5px

// -----------------------------------------------------------------------------
@media all and (max-width: 768px)
	/* main page: button on main slider */
	.button--big
		height: 37px
		min-width: 140px
		font-size: 18px
		line-height: 17px
		border-radius: 10px
		padding: 10px 15px

	/* game overlay buttons: play & demo */
	.button--small
		height: 23px
		font-size: 16px
		line-height: 23px
		border-radius: 4px

// -----------------------------------------------------------------------------
@media all and (max-width: 580px)
	/* main page: button on main slider */
	.button--big
		height: 15px
		min-width: 75px
		font-size: 12px
		line-height: 14px
		border-radius: 4px
		padding: 0 5px

	/* game overlay buttons: play & demo */
	.button--h30
		height: 11px
		font-size: 8px
		line-height: 11px
		border-radius: 2px

	.button--h30.button--filled,
	.button--h30.button--filled-secondary
		border-width: 1px
