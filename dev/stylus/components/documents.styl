/***
*
* Стили для страницы с документами
*
***/
.documents
	display: flex

	/* ----- wrappers & pagination -------------------------------------------- */
	&__wrapper
		width: 100%
		max-width: 1515px
		padding: 0 25px
		margin: 45px auto 0
		position: relative

		& .page__title
			margin-bottom: 0

		/* gold line on top */
		&:before
			content: ""
			height: 2px
			background-image: linear-gradient(90deg, rgba(0,0,0,0) 0%, rgba(222,175,118,0.5) 25%, #DCA96B 50%, rgba(222,175,118,0.5) 75%, rgba(0,0,0,0) 100%);
			position: absolute
			left: 0
			right: 0
			pointer-events: none
			z-index: 1

	& + .pager
		padding-top: 80px
		padding-bottom: 0

	/* ----- top part --------------------------------------------------------- */
	&__top
		width: 320px
		flex-shrink: 0
		display flex
		flex-direction: column
		padding-top: 75px
		margin-right: 55px

	&__load
		padding: 15px 20px 25px
		background-color: var(--secondary-accent)
		margin-bottom: 35px

	&__description p
		font-size: 16px
		line-height: 1.5
		margin-bottom: 10px

	/* upload notices */
	&__rules
		display: flex
		justify-content: space-between
		text-align left
		font-size 10px
		color $color-grey
		background-color: var(--primary-accent)
		border-radius: 5px
		padding: 5px 10px 10px
		margin-bottom: 20px
		overflow: hidden

		&-item
			max-width: 120px
			display flex
			flex-direction: column
			align-items: center
			color: var(--secondary-accent-text)

			& span:first-child
				display: flex
				justify-content: center

			& i
				font-size: 20px
				color: var(--primary-accent-complimentary)
				text-shadow: none
				margin: 0 5px 5px

	/* ----- bottom part: documents list -------------------------------------- */
	&__list-wrapper
		width: calc(100% - 320px - 55px)
		background-color: var(--secondary-accent)
		padding: 25px 20px

	&-list
		display: flex
		justify-content: center
		flex-wrap: wrap

		&__item
			display flex
			flex-shrink: 0
			min-height: 115px
			width: 280px
			background-color: var(--primary-accent)
			border-radius: 10px
			padding 15px 5px 15px 30px
			margin 15px 20px
			overflow hidden

			&-img
				width 65px
				flex-shrink: 0

				& img
					width: 100%
					height: 100%
					object-fit: contain
					object-position: center

			&-info
				display flex
				flex-direction column
				justify-content: space-between
				font-size 10px
				line-height: 1.5
				color var(--secondary-accent-text)
				margin-left 35px

				& li
					display flex
					flex-direction column
					text-align left

				&-date span
					font-size: 14px
					color: var(--primary-accent-complimentary)

				&-status span
					font-size 16px
					text-transform uppercase

// -----------------------------------------------------------------------------
@media all and (max-width: 1220px)
	.documents
		&__top
			padding-top: 35px

// -----------------------------------------------------------------------------
@media all and (max-width: 1024px)
	.documents
		&__wrapper
			padding: 0

		&__top
			margin-right: 40px

		&__list-wrapper
			width: calc(100% - 320px - 40px)
			margin-top: -40px

// -----------------------------------------------------------------------------
@media all and (max-width: 710px)
	.documents
		flex-direction: column

		&__top
			margin-left: auto
			margin-right: auto

		&__list-wrapper
			width: 100%
			margin-top: 20px

// -----------------------------------------------------------------------------
@media all and (max-width: 380px)
	.documents
		&__wrapper
			padding: 0

		&__top
			width: 100%

		&__description
			padding-left: 20px
			padding-right: 20px

		&-list__item
			width: 100%
			max-width: 280px
