.link
  text-decoration: none
  cursor: pointer

  &--primary
    font-size: 14px
    line-height: 1
    color: var(--primary-accent-lighter)
    transition: $t-color

    &:hover
      color: var(--primary-accent)

  &--back
    display: inline-flex
    justify-content: center
    align-items: center
    text-align: center

    & .icon-arrow-left
      margin-right: 10px
      margin-top: -2px
