.jackpots-table
	width 100%
	&__item
		display: flex
		justify-content: space-between
		align-items: center
		padding: 10px
		background-color #222222
		&:not(:last-child)
			margin-bottom 10px

	&__winner
		font-size: 14px
		line-height: 16px
		text-align: left
		padding-right: 10px

	&__right
		display: flex
		justify-content: flex-end
		align-items: center

	&__amount
		font-size: 14px
		line-height: 16px
		text-align: right
		font-weight: 700
		color: $primary-yellow
		margin-right: 10px

	&__currency
		font-weight: 700
		font-size: 14px
		line-height: 16px
		color: var(--primary-accent)
		text-align: left
		text-transform: uppercase
