.points
	display flex
	flex-direction column
	align-items: center
	flex-shrink 0
	padding: 5px 5px 0
	font-size $font-size-smaller

	&__title
		font-size 16px
		line-height 1
		color: $light-gold
		margin-bottom: 5px

	&__value
		font-size: 16px
		line-height: 1
		font-weight: 700
		color: var(--primary-accent)
		text-align: center
