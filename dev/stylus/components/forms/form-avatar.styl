/***
*
* Форма аватарa
*
***/
.form--avatar.form
	display: flex
	justify-content: center
	padding: 30px

.form-avatar
	/* top part: image */
	&__hidden-upload
		opacity 0
		position absolute
		width 100%
		height 100%
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer

	&__avatar
		flex-shrink: 0
		margin-bottom: 20px

		&-img
			flex-shrink: 0
			height: 120px
			width: 120px
			position: relative
			border-radius: 50%
			overflow: hidden

			& img
				display: block
				width: 100%
				height: 100%
				object-fit: contain

	/* bottom part: other stuff */
	&__bottom
		flex-shrink: 0
		width: 100%
		display: flex
		flex-direction: column
		align-items center

	&__username
		color: var(--primary-accent)
		font-size: 24px
		line-height: 30px
		text-align: center
		font-weight: 400
		margin-bottom: 30px

	&__button:not(:last-child)
		margin-bottom: 15px

	&__msg
		display: flex
		flex-direction: column
		justify-content: center
		align-items: center
		min-height: 45px
		width: 100%
		max-width: 240px
		color: var(--secondary-accent)
		font-size: 12px
		line-height: 14px
		text-align: center
		background-color: #846054
		border-radius 5px
		padding 5px 15px


// -----------------------------------------------------------------------------
@media all and (max-width: 580px)
	.form--avatar.form
		padding-top: 0
		padding-left: 0
		padding-right: 0
