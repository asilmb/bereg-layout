.special-radio
	// ----- list stuff ----------------------------------------------------------
	&__list
		padding-top: 5px
		padding-bottom: 5px

		&-heading
			font-size: 36px
			line-height: 1.5
			text-align: center
			font-weight: 500
			margin-bottom: 30px

	// ----- item stuff ----------------------------------------------------------
	margin-bottom: 20px
	background-color: transparent
	position: relative

	&__hidden-input
		display: none
		visibility: hidden

	&__label
		display: flex
		align-items: center
		min-height: 55px
		font-weight: 500
		font-size: 16px
		line-height: 1.5
		text-align: left
		color: var(--primary-accent-complimentary)
		padding: 15px 20px 15px 55px
		border-radius: 5px 5px 0 0
		transition: $t-color
		position: relative
		cursor: pointer

		&:before,
		&:after
			content: ""
			position: absolute
		&:before
			width: 20px
			height: 20px
			border 2px solid var(--primary-accent-lighter)
			background-color: transparent
			border-radius 50%
			top: 50%
			left: 20px
			transform: translateY(-50%)
			transition: $t-bg-color, $t-border-color
		&:after
			width: 8px
			height: 8px
			left: 26px
			top: 50%
			border-radius 50%
			background var(--primary-accent-lighter)
			transform: translateY(-50%)
			transition: $t-opacity
			opacity: 0

	&__hidden-input:checked + &__label
		font-weight: 700
		color: var(--secondary-accent-text)
		background-color: var(--primary-accent)

	&__hidden-input:checked + &__label:before
		background-color: var(--secondary-accent-2)
		border-color: var(--secondary-accent-2)
	&__hidden-input:checked + &__label:after
		opacity: 1

	&__content
		display: none
		text-align: left
		padding: 0 10px 15px 55px
		border-radius: 0 0 5px 5px

	&__hidden-input:checked ~ &__content
		display: block
		background-color: var(--primary-accent)

		&:empty
			padding: 10px
			margin-top: -15px

	&__row
		font-size: 14px
		line-height: 22px
		color: var(--secondary-accent-text)
		margin-bottom: 5px

		& .bold-text
			font-weight: 500

	&__link
		display: inline-block
		color: var(--primary-accent-complimentary)
		font-size: 16px
		line-height: 16px
		font-weight: 500
		margin-top: 15px
		cursor: pointer

		&:hover
			text-decoration: underline
