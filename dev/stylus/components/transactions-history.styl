.transactions-history
	/* ----- wrappers & inners & description ---------------------------------- */
	&__wrapper .page__title
		width: 100%
		max-width: 1295px
		padding-left: 30px
		padding-right: 30px
		margin: 45px auto 10px
		position: relative

		/* gold line on top */
		&:after
			content: ""
			height: 2px
			background-image: linear-gradient(90deg, rgba(0,0,0,0) 0%, rgba(222,175,118,0.5) 25%, #DCA96B 50%, rgba(222,175,118,0.5) 75%, rgba(0,0,0,0) 100%);
			position: absolute
			top: -5px
			left: 0
			right: 0
			pointer-events: none
			z-index: 1

	&__inner
		width: 100%
		max-width: 1295px
		padding-left: 30px
		padding-right: 30px
		margin: 20px auto

	/* ----- controls: tabs, view switvher and text --------------------------- */
	&__controls
		display: flex
		justify-content: space-between
		align-items: center
		margin-bottom: 40px

		& .view-switcher
			min-width: 160px
			margin-left: 10px
			margin-right: -10px

	&__last-date
		font-size: 14px
		line-height: 1.5
		color: var(--primary-accent)
		text-align: left
		margin-right: 10px

	&__tabs li
		width: 135px
		height: 44px
		font-size: 16px
		line-height: 24px
		text-align: center
		font-weight: 500
		color: var(--secondary-accent-text)
		white-space: nowrap
		background-color: var(--primary-accent-lighter)
		border-radius: 10px
		padding: 10px
		margin: 0 5px
		overflow: hidden
		transition: $t-bg-color
		cursor: pointer

		&:hover,
		&.active
			background-color: var(--primary-accent)

	/* ----- table & pagination ----------------------------------------------- */
	&__table .pager
		padding-top: 80px


// -----------------------------------------------------------------------------
@media all and (max-width: 1220px)
	.table--transactions.table-grid
		padding-left: 110px
		padding-right: 110px

// -----------------------------------------------------------------------------
@media all and (max-width: 1024px)
	.transactions-history
		&__wrapper .page__title
			padding-left: 90px
			padding-right: 90px
			margin-top: 40px

		&__inner
			padding: 0 90px
			margin-top: 35px
			margin-bottom: 35px

// -----------------------------------------------------------------------------
@media all and (max-width: 710px)
	.transactions-history
		&__wrapper .page__title
			padding-left: 50px
			padding-right: 50px

		&__inner
			padding: 0 50px

// -----------------------------------------------------------------------------
@media all and (max-width: 580px)
	.transactions-history
		&__wrapper .page__title
			padding-left: 20px
			padding-right: 20px
			margin-top: 20px

		&__inner
			padding: 0 20px
