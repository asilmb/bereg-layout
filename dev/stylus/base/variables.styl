  --secondary-accent-darker: #3E1C00
  --secondary-accent-lighter: #AF0014

  --primary-accent-darker: #AC9670
  --primary-accent-lighter: #F9F0BC

  --primary-dark-accent: #7D632B


  --error-color: #C70017
  --success-color: #128000

