// -----------------------------------------------
// Typography
// -----------------------------------------------
html
	font-size: 16px
	line-height: 1.5
	font-family: var(--font-primary)

h1, h2, h3, h4, h5
	line-height: normal
	user-select none
	margin-bottom 25px
	font-family var(--font-primary)

h1
	display: block
	width: 100%
	font-size: 60px
	font-weight: 700

h2
	display: block
	width: 100%
	font-size: 30px
	font-weight: 700

h3
	font-size: 24px
	font-weight: 700

p
	margin-bottom: 20px

li, a
	user-select none

// -----------------------------------------------------------------------------
@media all and (max-width: 1220px)
	html
		font-size: 14px
		line-height: 1.5
