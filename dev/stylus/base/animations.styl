// -----------------------------------------------
// Animations
// -----------------------------------------------
@keyframes spin
	100%
		transform: rotate(360deg)

@keyframes pulse
	from
		filter: hue-rotate(-60deg)
	to
		filter: hue-rotate(0deg)

@keyframes shaking
	from
		padding-left: 5px
	to
		padding-right: 5px

@keyframes twist
	from
		transform: rotate(0deg)
	to
		transform: rotate(360deg)
@keyframes open
	0%
		display: block
		opacity: 0
		visibility: hidden

	100%
		display: block
		opacity: 1
		visibility: visible
